{
  "compilerOptions": {
    "target": "es2021",
    "importHelpers": true,
    "module": "commonjs",
    "moduleResolution": "node10",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "./dist",
    "verbatimModuleSyntax": false
  },
  "exclude": [
    "dist/"
  ]
}